<article>
  <h2><a href="{{ item.url | url }}">{{ item.data.title }}</a></h2>

  <p class="date">
    <time datetime="{{ item.date | dateISO }}">{{ item.date | dateDM }} <a href="/thoughts/{{ item.date | dateY }}/" title="Time warp to {{ item.date | dateY }}">{{ item.date | dateY }}</a></time>

    {% if item.data.comments %}
    <a href="{{ item.url | url }}#comments" class="comments-link" title="View comments for this thought">&#x1f4ac; {{ item.data.comments | length }}</a>
    {% endif %}
  </p>

  {%- set items = item.data.tags | getTopicsForThought(collections.thoughtstopics) %}
  {% include 'components/thoughts/topics.njk' %}

  {% if item.data.teaser %}
  {{ item.data.teaser | autop | inlineThumbnails | safe }}
  {% endif %}
</article>
